#!/bin/bash

set -e
set -x

case $(uname -s) in
	Linux)
		sudo sh .travis/add-trusty
		sudo apt-get update
		sudo apt-get -t trusty -y install automake
		sudo apt-get install -y docbook-utils libnl-genl-3-dev libgnutls28-dev
	;;
	*)
		for i in man/*sgml
		do
			touch ${i%in.sgml}sh.in
		done
		brew update
		brew upgrade
		brew install glib gnutls
	;;
esac
